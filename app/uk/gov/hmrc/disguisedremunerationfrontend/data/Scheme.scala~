package dr

import ltbs.uniform._
import org.atnos.eff._
import cats.implicits._

case class Scheme (
  name: String,
  schemeReferenceNumber: Option[String],
  caseReferenceNumber: Option[String],
  otherReferenceNumber: Option[String],
  schemeStart: Date,
  stoppedInvolvmentOn: Option[Date],
  bankrupted: Boolean,
  employee: Boolean,
  loanRecipient: Boolean,
  taxSettlements: List[TaxSettlement]
)

object Scheme {

  type Stack = Fx.fx6[
    UniformAsk[String,?],
    UniformAsk[Option[String],?],
    UniformAsk[Date,?],
    UniformAsk[Option[Date],?],
    UniformAsk[Boolean,?],
    UniformAsk[Option[TaxSettlement],?]
  ]

  def program[R
      : _uniform[String,?]
      : _uniform[Option[String],?]
      : _uniform[Date,?]
      : _uniform[Option[Date],?]
      : _uniform[Boolean,?]
      : _uniform[Option[TaxSettlement],?]
  ]: Eff[R, Scheme] = (
      uask[R,String]("name"),
      uask[R,Option[String]]("schemeReferenceNumber"),
      uask[R,Option[String]]("caseReferenceNumber"),
      uask[R,Option[String]]("otherReferenceNumber"),
      uask[R,Date]("schemeStart"),
      uask[R,Option[Date]]("stoppedInvolvmentOn"),
      uask[R,Boolean]("bankrupted"),
      uask[R,Boolean]("employee"),
      uask[R,Boolean]("loanRecipient"),
      uask[R,Option[TaxSettlement]]("taxSettlements").map{_.toList}
    ).mapN(Scheme.apply)

}
